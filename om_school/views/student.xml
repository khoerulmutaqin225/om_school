<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- student_tree view -->
    <record id="student_view_tree" model="ir.ui.view">
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name" />
                <field name="age" />
                <field name="guardian" />
                
                <field name="gender" optional="show" />
                <field name="active" optional="hide" />

            </tree>
        </field>
    </record>

    <!-- school_student form view -->
    <record id="school_student_view_form" model="ir.ui.view">
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Students">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar" />
                    <widget name="web_ribbon" text="Male" bg_color="bg-danger"
                        attrs="{'invisible':[('gender', '=', 'female')]}" />
                    <widget name="web_ribbon" text="Female" bg_color="bg-danger"
                        attrs="{'invisible':[('gender', '=', 'male')]}" />

                    <div class="oe_title">
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <!-- Add your fields here -->
                        <group>
                            <field name="gender" />
                            <field name="customer_id" widget="res_partner_many2one"
                                context="{'res_partner_search_mode': 'customer'}" />
                            <field name="supplier_id" widget="res_partner_many2one"
                                context="{'res_partner_search_mode': 'supplier'}" />
                        </group>
                        <group>
                            <field name="date_from" widget="daterange" options="{'related_end_date': 'date_to'}" />
                            <field name="date_to"  widget="daterange" options="{'related_start_date': 'date_from'}" />
                            <field name="age" />
                            <field name="guardian" />
                        </group>
                    </group>
                    <!-- <group>
                        <label for="date_from" string="Date">
                            <div class="o_row">
                                <field name="date_from" widget="daterange" nolabel="1" class="oe_inline"
                    options="{'related_end_date': 'date_end'}" />
                                <i class="fa fa-long-arrow-right mx-2" aria-label="Arrow icon" title="Arrow"/>
                                <field name="date_end" widget="daterange" nolabel="1" class="oe_inline"
                    options="{'related_end_date': 'date_end'}" />
                            </div>

                        </label>
                        <field name="date_tz" />
                    </group> -->

                    <notebook>
                        <page>
                            <field name="video_url" />
                            <field name="embed_code" class="mt-2" widget="video_preview"
                                options='{"video_url_field": "video_url"}' />
                        </page>
                    </notebook>
                    <group>
                        <field name="active" />
                    </group>

                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_follower" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" options='{"thread level": 1}' />

                </div>
            </form>
        </field>
    </record>


    <!-- student.search search view -->
    <record id="student_search_view" model="ir.ui.view">
        <field name="name">school.student.search</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <search string="Student">
                <!-- Add your fields here -->
                <field name="name" filter_domain="[('name','ilike',self)]" string="name" />
                <field name="guardian" filter_domain="[('guardian','ilike',self)]" string="Guardian" />
                <separator />
                <filter name="Male" string="Male" domain="[('gender', '=', 'male')]" />
                <filter name="Female" string="Female" domain="[('gender', '=', 'female')]" />
                <!-- <field name="name"/> -->
                <searchpanel>
                    <field name="gender" icon="fa-users" />
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- action.student action window -->
    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Student</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <!-- <field name="view_type">form</field> -->
        <field name="help" type="html">
            <p class="oe_view_nocontent_smiling_face">
                <!-- Add Text Here --> Create Tour Student here </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>


    <!-- This Menu Item must have a parent and an action -->
    <menuitem
        id="school_root_menu"
        name="School"
        web_icon="om_school,static/description/icon.png"
        sequence="7" />

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="school_student_menu"
        name="Students"
        web_icon=""
        action="action_student"
        parent="school_root_menu"
        sequence="10" />


</odoo>